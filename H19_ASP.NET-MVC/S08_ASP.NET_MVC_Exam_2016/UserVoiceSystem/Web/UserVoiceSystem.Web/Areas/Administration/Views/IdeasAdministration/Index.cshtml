@using UserVoiceSystem.Web.Areas.Administration.ViewModels.Ideas
@model IQueryable<IdeaOutputViewModel>

@{
    ViewBag.Title = "Ideas";
}
<h2>@ViewBag.Title</h2>
<div>
    @(Html.Kendo().Grid<IdeaOutputViewModel>()
            .Name("IdeasGrid")
            .Columns(columns =>
            {
                columns.Bound(c => c.Id);
                columns.Bound(c => c.Title);
                columns.Bound(c => c.Description).Width(400);
                columns.Bound(c => c.CreatedOn).Format("{0:yyyy-MM-dd HH:mm}");
                columns.Bound(c => c.ModifiedOn).Format("{0:yyyy-MM-dd HH:mm}");
                columns.Command(command => { command.Edit(); command.Destroy(); });
            })            
            .ColumnMenu()
            .Editable(editable => editable.Mode(GridEditMode.PopUp))
            .Scrollable(scr => scr.Height(600))
            .Groupable()
            .Sortable()
            .Pageable(pageable => pageable
                .Refresh(true)
                .PageSizes(true)
                .ButtonCount(5))
            .DataSource(dataSource => dataSource
                .Ajax()
                .ServerOperation(false)
                .Events(events => events.Error("error_handler"))
                .PageSize(3)
                .Model(model => model.Id(m => m.Id))
                .Read(read => read.Action("Read", "IdeasAdministration"))                
                .Update(update => update.Action("Update", "IdeasAdministration"))
                .Destroy(update => update.Action("Destroy", "IdeasAdministration"))
            )
    )
</div>

@section scripts{
    <script type="text/javascript">
        function error_handler(e) {
            if (e.errors) {
                var message = "Errors:\n";
                $.each(e.errors, function (key, value) {
                    if ('errors' in value) {
                        $.each(value.errors, function () {
                            message += this + "\n";
                        });
                    }
                });
                alert(message);
            }
        }
    </script>
}