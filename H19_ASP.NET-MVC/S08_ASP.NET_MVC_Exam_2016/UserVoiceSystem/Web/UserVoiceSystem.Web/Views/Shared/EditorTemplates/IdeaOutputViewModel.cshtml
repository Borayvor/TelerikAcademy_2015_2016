@model UserVoiceSystem.Web.Areas.Administration.ViewModels.Ideas.IdeaOutputViewModel


<div class="form-group">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
        @Html.LabelFor(m => m.Title, new { @class = "col-xs-2" })
        <div class="col-xs-10">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @placeholder = "Enter your idea" })
        </div>
    </div>
    <div class="form-group">
        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
        @Html.LabelFor(m => m.Description, new { @class = "col-xs-2" })
        <div class="col-xs-10">
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @placeholder = "Enter description", @rows = 5 })
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval");
}