@model UserVoiceSystem.Web.Areas.Administration.ViewModels.Comments.CommentOutputViewModel


<div class="form-group">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
        @Html.LabelFor(m => m.Content, new { @class = "col-xs-2" })
        <div class="col-xs-10">
            @Html.TextAreaFor(m => m.Content, new { @class = "form-control", @placeholder = "Add a comment...", @rows = 5 })
        </div>
    </div>
    <div class="form-group">
        @Html.ValidationMessageFor(m => m.AuthorEmail, "", new { @class = "text-danger" })
        @Html.LabelFor(m => m.AuthorEmail, new { @class = "col-xs-2" })
        <div class="col-xs-10">
            @Html.TextBoxFor(m => m.AuthorEmail, new { @class = "form-control", @placeholder = "Your email address" })
        </div>
    </div>    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval");
}