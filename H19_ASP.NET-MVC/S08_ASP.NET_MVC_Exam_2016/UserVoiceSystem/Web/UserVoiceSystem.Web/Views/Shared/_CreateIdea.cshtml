@using UserVoiceSystem.Web.ViewModels.Ideas
@model IdeaPostViewModel


@using (Ajax.BeginForm(
                "Create",
                "Idea",
                new AjaxOptions
                {
                    UpdateTargetId = "ideas-list",
                    InsertionMode = InsertionMode.Replace,
                    HttpMethod = "POST"
                }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-xs-12">
            @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
            @Html.LabelFor(m => m.Title, new { @class = "col-xs-2", @value = "I suggest you ..." })
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @placeholder = "Enter your idea" })
        </div>
        <div class="col-xs-12">
            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @placeholder = "Enter description" })
        </div>
    </div>
    if (User.Identity.IsAuthenticated)
    {
        <div class="form-group">
            <div class="col-xs-2">
                <input type="submit" value="Post Idea" class="btn" />
            </div>
        </div>
    }
}
