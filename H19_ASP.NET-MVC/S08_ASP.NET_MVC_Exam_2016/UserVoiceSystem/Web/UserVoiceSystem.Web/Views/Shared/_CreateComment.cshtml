@using UserVoiceSystem.Web.ViewModels.Comments
@model CommentPostViewModel

@using (Ajax.BeginForm(
                "Create",
                "Comment",
                new AjaxOptions
                {
                    UpdateTargetId = "comments-list",
                    InsertionMode = InsertionMode.Replace,
                    HttpMethod = "POST"
                }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-xs-12">
            @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
            @Html.LabelFor(m => m.Content, new { @class = "col-xs-2", @value = "I suggest you ..." })
            @Html.TextBoxFor(m => m.Content, new { @class = "form-control", @placeholder = "Enter your idea" })
        </div>
        <div class="col-xs-12">
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            @Html.TextAreaFor(m => m.Email, new { @class = "form-control", @placeholder = "Enter description" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-2">
            <input type="submit" value="Post Comment" class="btn" />
        </div>
    </div>
}



